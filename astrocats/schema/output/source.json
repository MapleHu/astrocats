{
  "description":"An item representing a bibliographic attribution or reference.",
  "anyOf":[
    {
      "required":[
        "bibcode"
      ]
    },
    {
      "required":[
        "arxivid"
      ]
    },
    {
      "required":[
        "doi"
      ]
    },
    {
      "required":[
        "url"
      ]
    },
    {
      "required":[
        "name"
      ]
    }
  ],
  "$schema":"http://json-schema.org/schema#",
  "properties":{
    "alias":{
      "description":"The unique identifier for this source.",
      "type":[
        "integer",
        "string"
      ],
      "unique":false,
      "distinguishing":false,
      "anyOf":[
        {
          "type":"string",
          "minLength":1
        },
        {
          "type":"number",
          "minimum":0
        }
      ]
    },
    "name":{
      "description":"Description designation for this source.",
      "type":"string",
      "unique":false,
      "distinguishing":true,
      "minLength":3
    },
    "bibcode":{
      "type":"string",
      "unique":true,
      "distinguishing":true,
      "minLength":19,
      "maxLength":19
    },
    "arxivid":{
      "description":"ID number for the arXiv.",
      "type":"string",
      "unique":true,
      "distinguishing":true
    },
    "doi":{
      "description":"Digital Object Identifier (DOI) for this source.",
      "type":"string",
      "unique":true,
      "distinguishing":true
    },
    "url":{
      "type":"string",
      "format":"uri",
      "unique":false,
      "distinguishing":false
    },
    "secondary":{
      "type":"boolean",
      "unique":false,
      "distinguishing":false
    },
    "acknowledgment":{
      "type":"string",
      "unique":false,
      "distinguishing":false
    },
    "reference":{
      "type":"string",
      "unique":false,
      "distinguishing":false
    },
    "private":{
      "type":"boolean",
      "unique":false,
      "distinguishing":false
    }
  },
  "type":"object",
  "title":"source",
  "version":"0.5",
  "required":[
    "alias"
  ]
}